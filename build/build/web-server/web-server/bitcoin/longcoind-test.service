[Unit]
Description=longcoind-test.service
After=syslog.target
After=network.target

[Service]
Type=simple
PIDFile=/home/ubuntu/bitcoin-data0/bitcoind.pid
WorkingDirectory=/home/ubuntu/bitcoin

ExecStart=/home/ubuntu/bitcoin/bitcoind -datadir=/home/ubuntu/bitcoin-data0 
ExecReload=/bin/kill -s HUP/home/ubuntu/bitcoin-data0/bitcoind.pid
ExecStop=/bin/kill -s QUIT /home/ubuntu/bitcoin-data0/bitcoind.pid
Restart=always

[Install]
WantedBy=multi-user.target
